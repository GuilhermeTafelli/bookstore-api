{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "prisma/*": ["./prisma/*"],
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
